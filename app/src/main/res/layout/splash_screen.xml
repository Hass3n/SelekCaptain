<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    >

    <ImageView
        android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_top" />

    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/way"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/way" />

    <com.agrawalsuneet.dotsloader.loaders.LinearDotsLoader
        android:layout_marginTop="52dp"
        android:layout_below="@id/way"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:loader_animDur="300"
        app:loader_noOfDots="3"
        app:loader_circleRadius="6dp"
        app:loader_defaultColor="@color/gray"
        app:loader_selectedColor="@color/colorPrimary"
        app:loader_dotsDist="3dp"
        app:loader_expandOnSelect="true"
        app:loader_isSingleDir="true"
        app:loader_selectedRadius="7dp"
        app:loader_firstShadowColor="@color/gray"
        app:loader_secondShadowColor="@color/gray"
        />
        <!--app:loader_showRunningShadow="true"
        app:loader_firstShadowColor="@android:color/black"
        app:loader_secondShadowColor="@android:color/holo_green_dark"-->


</RelativeLayout>