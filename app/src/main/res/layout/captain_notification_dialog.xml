<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">


    <LinearLayout
        android:id="@+id/parent_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_outline"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <LinearLayout
            android:id="@+id/call_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="10dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/mask_group"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/notification_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 01234567890"
                android:gravity="center"
                android:textDirection="ltr"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_call_black_24dp" />

               <!-- <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:text="Call Now"
                    android:textSize="14sp"
                    android:textDirection="rtl"
                    />-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="12dp"
            >


            <TextView
                android:id="@+id/current_location_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6,شارع احمد سليمان,المنيا Al-minya,menia,6st Ahmed soliman "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:ellipsize="middle"
                android:singleLine="true"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/input_design"
                />
            <TextView
                android:id="@+id/destination_location_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6,شارع احمد سليمان,المنيا Al-minya,menia,6st Ahmed soliman "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:ellipsize="middle"
                android:singleLine="true"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input_design"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="8dp"
        >

            <ImageView
                android:id="@+id/notification_price_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/pound"
                />
            <TextView
            android:id="@+id/notification_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="26sp"
                android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"

            />

            <ImageView
                android:id="@+id/notification_coins_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/coins"
                />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="18dp"
            >

            <Button
                android:id="@+id/notification_accept_btn"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:text="سالك"
                android:textSize="18sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/buttons"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/notification_cancel_btn"
                android:layout_width="110dp"
                android:layout_height="36dp"
                android:text="لا أقبل"
                android:textSize="18sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/cancel_outline"
                android:textStyle="bold"
                android:textColor="@color/red"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/notification_logo"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:padding="18dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/notification"
        android:background="@drawable/notification_outline"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />
    <ProgressBar
        android:id="@+id/captain_accept_trip_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:visibility="gone"
        android:layout_below="@id/notification_logo"
        />

</RelativeLayout>

