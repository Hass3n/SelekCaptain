    <TextView
        android:id="@+id/captain_id_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/captain_id_txt"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
