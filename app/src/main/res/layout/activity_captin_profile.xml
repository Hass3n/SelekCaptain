    <TextView
        android:id="@+id/captain_email_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/captain_email_txt"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/captain_email_txt"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="mahmoudmohamed@gmail.com"
        android:fontFamily="@font/hacen_tunisia"
        android:textColor="@color/grayDark"
        android:textDirection="rtl"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/captain_evaluation_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/captain_evaluation_txt"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/captain_evaluation_txt"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="4.1"
        android:fontFamily="@font/hacen_tunisia"
        android:textColor="@color/grayDark"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/captain_evaluation_star"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/captain_evaluation_data"
        android:layout_marginEnd="6dp"
        android:layout_toEndOf="@+id/captain_evaluation_data"
        android:gravity="start"
        android:src="@drawable/star"
        />

    <ImageView
        android:id="@+id/captain_status_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/captain_status_txt"
        android:layout_below="@+id/captain_evaluation_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/off" />

    <TextView
        android:id="@+id/captain_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        tools:text="أنت غير متاح الآن"
        android:fontFamily="@font/hacen_tunisia"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>